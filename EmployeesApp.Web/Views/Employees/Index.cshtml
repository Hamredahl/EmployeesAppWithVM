@model IndexVM
@{
    ViewBag.Title = "Employees List";
}

<ul>
    @foreach (var employee in Model.Employees)
    {
        <li>
            @{
                var className = employee.ShowAsHighlighted ? "highlighted" : string.Empty;
            }
            <a class="@className" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a>
        </li>
    }
</ul>